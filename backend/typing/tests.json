{
  "tests": [
    {
      "name": "Set typing status",
      "method": "POST",
      "path": "/",
      "headers": {
        "X-Auth-Token": "1:test-token"
      },
      "body": {
        "receiver_id": 2,
        "is_typing": true
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      }
    },
    {
      "name": "Get typing status",
      "method": "GET",
      "path": "/?user_id=2",
      "headers": {
        "X-Auth-Token": "1:test-token"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "is_typing": "boolean"
      },
      "bodyMatcher": "partial"
    }
  ]
}
